# local gitconfig settings, only for this machine
# use this to override the [user] bit
# Default
# [user]
#    email = riku.lindblad@iki.fi
#    name = Riku Lindblad
#    signingkey = XXXXXXXXXXXXXXXX   # GPG key

[include]
    path = .gitconfig.local

# Include local gitconfig
[includeIf "gitdir:~/projects/"]
    path = ~/projects/.gitconfig

[color]
    diff = auto
    status = auto
    branch = auto
	ui = always
	interactive = auto
[alias]
    worklog = "!sh -c 'git log --pretty=format:\"%ad - %s\" --date=short --author \"$(git config user.email)\"'"

    s = status --short --branch

    up = !git pull --rebase --prune $@ && git submodule update --init --recursive

    pom = push origin master
    pum = pull --rebase origin master

    # Like "git show myfile", but uses the last commit that changed "myfile".
    showlast = log -n 1 -p

    outgoing = diff origin/master...master
    incoming = !git fetch && git log --stat ..origin/master
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[push]
	default = simple
    autoSetupRemove = true
    followTags = true
[stash]
	showPatch = true
[pull]
	ff = only
	rebase = true
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[column]
	ui = auto

[log]
    date = iso

[apply]
    # Remove trailing whitespaces
    whitespace = fix

[help]
    autocorrect = prompt

[fetch]
    prune = true # Remove useless local branches when fetching
    pruneTags = true
    all = true

# sign commits with SSH key stored in 1password
[commit]
    gpgsign = true
    verbose = true
[gpg]
	format = ssh
[gpg "ssh"]
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign

# delta
[core]
	pager = delta
    autocrlf = input
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true    # use n and N to move between diff sections
[merge]
    conflictstyle = zdiff3
    autoStash = true
    
[diff]
    algorithm = histogram
    colorMoved = plain
    colorMovedWS = allow-indentation-change
    renames = true

[rerere]
	enabled = true
	autoupdate = true

[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true
[init]
	defaultBranch = main

# Authentication via GitHub CLI
[credential "https://github.com"]
    helper = !gh auth git-credential
[credential "https://gist.github.com"]
    helper = !gh auth git-credential
