#!/bin/sh
echo "Installing packages (may prompt for sudo password)..."

# Call the standalone install-packages script
{{ .chezmoi.homeDir }}/bin/install-packages.sh

# Check if the script executed successfully
if [ $? -eq 0 ]; then
    echo "Package installation completed via bin/install-packages.sh"
else
    echo "Package installation failed - check bin/install-packages.sh"
    exit 1
fi
