{{ if eq .chezmoi.os "linux" -}}
#!/bin/sh
if sudo -n true 2>/dev/null; then 
    echo "sudo permissions detected, installing packages"
    
    # Install essential tools
    sudo apt update
    sudo apt install -y tmux ack eza bat fish httpie wget rsync pinentry-tty btop fd-find ripgrep zoxide neovim

    # Check for Starship
    if [ ! -x "$(command -v starship)" ]; then
        echo "Installing Starship..."
        curl -sS https://starship.rs/install.sh | sh
    else
        echo "Starship already installed, skipping"
    fi

    # Check for Atuin
    if [ ! -x "$(command -v atuin)" ]; then
        echo "Installing Atuin..."
        curl --proto '=https' --tlsv1.2 -LsSf https://setup.atuin.sh | sh
    else
        echo "Atuin already installed, skipping"
    fi
    
    # Check for Mise
    if [ ! -x "$(command -v mise)" ]; then
        echo "Installing Mise..."
        curl https://mise.run | sh
    else
        echo "Mise already installed, skipping"
    fi
else
    echo "no sudo permissions, skipping package install"
fi
{{ else if eq .chezmoi.os "darwin" -}}
#!/bin/sh
# Install Homebrew if not already installed
if [ ! -x "$(command -v brew)" ]; then
    echo "Installing Homebrew..."
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
else
    echo "Homebrew already installed, updating..."
    brew update
fi

# Install packages from Brewfile
echo "Installing packages from Brewfile..."
brew bundle

# Install terminal and window management tools
echo "Installing terminal and window management tools..."
brew install --cask hammerspoon
brew install --cask karabiner-elements

# Install fonts
echo "Installing fonts..."
brew install font-fira-mono-nerd-font font-fira-code-nerd-font font-fira-code font-fira-mono
{{ else if eq .chezmoi.os "windows" -}}
echo "Windows not supported"
{{ else -}}
echo "Unsupported OS"
{{ end -}}
